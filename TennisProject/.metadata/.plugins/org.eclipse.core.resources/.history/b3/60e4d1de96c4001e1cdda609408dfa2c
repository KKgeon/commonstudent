package tennisScoreView;

import java.io.IOException;
import java.util.ArrayList;
import java.util.Scanner;

public class TennisSetting {
	public static void main(String[] args) throws IOException {

		chooseSoloDuo();
		chooseTeamMember();

	}//m

	private static void chooseTeamMember() {
		Scanner sc = new Scanner(null)
		
		ArrayList<TennisPlayer> TennisPlayers = new ArrayList<TennisPlayer>();
		
        while (TennisPlayers.size() < 4) {
            // TennisPlayer 객체 생성 또는 입력 받기
        	System.out.println("팀원을 선정하십시오");
            String playerName = sc.nextLine();
            TennisPlayer player = new TennisPlayer();
    		
    		System.out.println("");
    		TennisPlayers.add(new TennisPlayer("남자선수1", true, 20));
    		TennisPlayers.add(new TennisPlayer("남자선수2", true, 24));
    		TennisPlayers.add(new TennisPlayer("남자선수3", true, 27));
    		TennisPlayers.add(new TennisPlayer("여자선수1", false, 21));
    		TennisPlayers.add(new TennisPlayer("여자선수2", false, 23));
    		TennisPlayers.add(new TennisPlayer("여자선수3", false, 25));
            // 리스트에 객체 추가
            TennisPlayers.add(player);

            System.out.println("Player added. Total players: " + TennisPlayers.size());
        }

        System.out.println("4 players added. Program exiting.");
    }
}
		





	private static void chooseSoloDuo() throws IOException {
		Scanner sc = new Scanner(System.in);
		System.out.println("경기방식을 선택하십시오\n1. 단식\t 2.복식");

		int choose = sc.nextInt();
		if (choose==1) {
			System.out.println("단식 경기를 선택하셨습니다");
		}else if(choose==2) {
			System.out.println("복식 경기를 선택하셨습니다");
		} else {
			System.out.println("잘못 된 입력입니다.");
		}
	}//choosenSoloDuo()



}//c
