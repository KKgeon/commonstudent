package TennisScoreView;

import java.io.IOException;
import java.util.Scanner;

public class SelectSoloOrDuo {
	public static void main(String[] args) throws IOException {

		choosenSoloDuo();

	}//m

	private static void choosenSoloDuo() throws IOException {
		Scanner sc = new Scanner(System.in);
		System.out.println("경기방식을 선택하십시오\n1. 단식\t 2.복식");

//		int choose = sc.nextInt();
		if (sc.nextInt()==1) {
			System.out.println("단식 경기를 선택하셨습니다");
		}else if(sc.nextInt()==2) {
			System.out.println("복식 경기를 선택하셨습니다");
		} else {
			System.out.println("잘못 된 입력입니다.");
		}

	}
}//c
